@import '~app/assets/stylesheets/normalize'
@import '~app/assets/stylesheets/glyphicons'

:global {

  html {
    box-sizing: border-box;
    // Changing to this value so the rems are easier to calculate
    // 1.4rem = 14px
    // 2.4rem = 24px
    font-size: 62.5%;
    position: relative;
  }

  *, *:before, *:after {
    box-sizing: inherit;
  }

  body {
    min-width: 1280px;
    max-width: 1680px;
    position: relative;
    font-family: 'ProximaNova', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 1.4rem;
    // background-color: #F0EFEF;
  }

  h1, h2, h3 {
   color: #87FCF6;
   text-align: left;
   font-family: sans;
  }

  p, ul, li {
   color: aliceblue;
   line-height: 19px;
   font-family: calibri;
   font-size: 17px;
   text-align: justify;
  }

  a {
    text-decoration: none;
    cursor: pointer;
  }

  a, a:visited, a:hover, a:active {
    color: inherit;
  }

  button {
    cursor: pointer;
  }

  * {
    box-sizing: border-box;
  }
}
