.header  
  float left
  width 100%
  height 70px
  background-color #0AA7A0

.headerLogo
  float left
  width 60%
  height 100%
  background-color transparent

.headerLogoImg
  height 55px
  margin 10px 0 0 140px
  background-image url("app/assets/images/logo_MC.png")
  background-repeat no-repeat

.headerLogin
  float left
  height 100%
  width 40%
  border-left 1px solid white
  padding 17px
  background-color transparent

.headerSubmit
  float left
  margin-top 10px
  margin-left 280px

.headerSubmit a
  padding 10px 
  border-radius 15px 
  outline none 
  background-color white 
  color #0AA7A0
  font-weight bold
  border 2px solid #0AA7A0
  &:hover
    background-color aliceblue
  &:active
    background-color #CBDAE6