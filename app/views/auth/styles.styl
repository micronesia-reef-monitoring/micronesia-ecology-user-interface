//HEADER-START//
.header  
  float left
  width 100%
  height 70px
  background-color #0AA7A0

.headerLogo
  float left
  width 60%
  height 100%
  background-color transparent

.headerLogoImg
  height 55px
  margin 10px 0 0 140px
  background-image url("app/assets/images/logo_MC.png")
  background-repeat no-repeat

.headerLogin
  float left
  height 100%
  width 40%
  border-left 1px solid white
  padding 13px
  background-color transparent

.headerUsername, .headerPassword
  float left

.headerUsername input, .headerPassword input
  width 150px
  height 40px
  padding 10px  
  border-radius 10px
  margin 0 10px 0 0 
  outline none
  border 2px solid grey
  font-weight bold
  &:focus
    outline none
    border-color #A0A0A0

.headerSubmit
  input[type=submit]
    width 60px
    padding 10px 
    border-radius 15px 
    outline none 
    background-color white 
    color #0AA7A0
    font-weight bold
    border 2px solid #0AA7A0
    &:hover
      background-color aliceblue
    &:active
      background-color #CBDAE6

.headerError
  clear both
  font-weight bold
  color black
//HEADER-END//

//MAIN-START//
.main   
 float left
 width 100%
 height 750px
 background-size 100%
 background-image url("app/assets/images/bg_home.jpg")
 background-repeat round

.mainSize
  width 840px
  margin-left auto
  margin-right auto

.mainTitle
  @extends .mainSize;  
  text-align center
  padding-top 15px
  color white
  font-size 4em

.mainContent
  @extends .mainSize;
  height 350px
  text-align center
  padding-top 15px

.mainContentImg
  width 300px
  height 300px
  margin-left auto
  margin-right auto
  text-align center
  background-size 300px
  background-image url("app/assets/images/logo_MC_grande.png")
  background-repeat round  

.mainFooter
  @extends .mainSize;
  height 130px
  text-align center

.mainFooterPanel
  float left
  width 50%
  height 100%

.mainFooterLeft
  @extends .mainFooterPanel;
  background-image url("app/assets/images/img_destacado_izq2.png")
  background-repeat no-repeat

.mainFooterText
  color #87FCF6
  font-size 20px
  text-align left
  font-weight bold

.mainFooterLeftText
  @extends .mainFooterText;
  margin-left 138px
  margin-top 40px
  width 280px

.mainFooterRight
  @extends .mainFooterPanel;
  background-image url("app/assets/images/img_destacado_der2.png")
  background-repeat no-repeat

.mainFooterRightText
  @extends .mainFooterText;
  margin 40px 160px 0 35px
//MAIN-END//

//MAIN REEF-START//
.mainReef   
 float left
 width 100%
 height 710px
 background-size 100%
 background-image url("app/assets/images/bg_reef.jpg")
 background-repeat round

.mainReefSk
 @extends .mainSize;  
 height 100%

.colLeft
 float left
 width 40%
 height 100%
 background-image url("app/assets/images/img_buceador.jpg")
 background-repeat round

.colRight
 float left
 width 60%
 height 100%
 text-align justify
 padding-left 50px
 background-color transparent

.colRight a
  &:hover
    color #bbb
//MAIN REEF-END//

//MAIN CHALLENGE-START//
.mainChallenge   
 float left
 width 100%
 height 800px
 background-size 100%
 background-image url("app/assets/images/bg_challenge.jpg")
 background-repeat round

.mainChallengeHeader
  width 100%
  height 90px
  background-color #fff
  background-position 50% 0px
  background-repeat no-repeat
  background-size 840px 90px
  background-image url("app/assets/images/logos_tira.jpg")

.mainChallengeSk
 @extends .mainSize;  

.mainChallengeTop
  width 100%
  height 195px
  background-color #fff
  background-repeat no-repeat
  background-size 840px 195px
  background-image url("app/assets/images/img_group.jpg")

.mainChallengeSkMiddle
  width 100%
  height 210px

.mainChallengeSkMiddleTitle
  float left
  width 35%
  height 100%
  padding 25px 5px 0px 5px
  line-height 40px

.mainChallengeSkMiddleText
  float left
  width 65%
  height 100%

.mainChallengeSkBottom
  width 100%
  height 150px
  background-repeat no-repeat
  background-size 840px 150px
  background-image url("app/assets/images/img_buceo.jpg")

.mainChallengeSkButton
  width 100%
  height 90px
  padding-top 30px

.mainChallengeSkButton1
  float left
  width 280px
  height 90px
  background-repeat no-repeat
  background-size 275px 90px
  background-image url("app/assets/images/destacado1.png")

.mainChallengeSkButton2
  float left
  width 300px
  height 90px
  background-repeat no-repeat
  background-size 295px 90px
  background-image url("app/assets/images/destacado2.png")

 .mainChallengeSkButton3
  float left
  width 260px
  height 90px
  background-repeat no-repeat
  background-size 260px 90px
  background-image url("app/assets/images/destacado3.png") 
//MAIN CHALLENGE-END//

//MAIN CHALLENGE EXTRA-START//
.mainChallengeExtra 
 float left
 width 100%
 background-size 100%
 background-image url("app/assets/images/bg_pixel.jpg")
 background-repeat round

.mainChallengeExtraSk
