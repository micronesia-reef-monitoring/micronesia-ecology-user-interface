//HEADER-START//
.header  
  float left
  width 100%
  height 65px
  background-color #0AA7A0

.headerLogo
  float left
  width 60%
  height 100%
  background-color transparent

.headerLogoImg
  height 50px
  margin 10px 0 0 140px
  background-image url("app/assets/images/logo_MC.png")
  background-repeat no-repeat

.headerLogin
  float left
  height 100%
  width 40%
  border-left 1px solid white
  padding 17px
  background-color transparent

.headerSubmit
  input[type=submit]
    width 60px
    padding 5px 
    border-radius 15px 
    outline none 
    background-color white 
    color #0AA7A0
    font-weight bold
    border 2px solid #0AA7A0
    &:hover
      background-color aliceblue
    &:active
      background-color #CBDAE6
//HEADER-END//

//MAIN-START//
.reportPanel 
  float left
  width 100%
  min-height 600px
  height auto
  padding-bottom 50px
  background-size 100%
  background-image url("app/assets/images/bg_pixel.jpg")
  background-repeat round

.tabbedArea
  width 1024px
  margin 20px auto 20px auto
  color #555
  line-height 24px

.tabbedArea ul, .tabbedArea li
  float left
  list-style-type none
  padding 0px
  margin 0px

.tabbedArea li
  display block
  text-align center
  text-decoration none
  text-transform uppercase
  color #888
  padding 10px 10px
  margin 20px
  cursor pointer
  border-bottom 2px solid #888
  background-color #eee
  &:hover
    background-color #ddd
  &:active
    background-color #ccc

.tabbedArea li:first-child
  margin-left 0px

.active
  background #ccc!important

.chartArea
  width 1024px
  height auto
  margin-left auto
  margin-right auto 
//MAIN-END//